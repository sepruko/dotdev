{
	"[astro]": {
		"editor.defaultFormatter": "astro-build.astro-vscode"
	},
	"[css][javascript][javascriptreact][json][jsonc][typescript][typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[markdown][mdx][yaml]": {
		"editor.insertSpaces": true,
		"editor.rulers": [
			80
		],
		"editor.tabSize": 2
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.insertSpaces": false,
	"editor.rulers": [
		80,
		100
	],
	"editor.tabSize": 4,
	"files.associations": {
		"**/apps/**/dict/**.txt": "ignore",
		"**/packages/**/dict/**.txt": "ignore",
		"CODEOWNERS": "ignore",
		"cspell.config.json": "jsonc",
		"cspell.ext.json": "jsonc"
	},
	"files.exclude": {
		"**/.husky/_": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"json.schemas": [
		{
			"fileMatch": [
				"/apps/dotdev/dotdev.config.json"
			],
			"url": "/apps/dotdev/public/schemas/dotdev.json"
		}
	],
	"task.autoDetect": "off",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.tsdk": "node_modules/typescript/lib"
}
