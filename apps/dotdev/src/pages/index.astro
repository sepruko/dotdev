---
import MainLayout from "@/layouts/MainLayout";

const {
	entity: { name, full_name },
} = DotDev;
---

<MainLayout
	title=`${Astro.site!.hostname} / ~`
	description=`${full_name}'s personal website.'`
	keywords={[
		...full_name.toLowerCase().split(" "),
		"webdev",
		"webdevelopment",
		"web development",
		Astro.site!.hostname,
	]}
	>Hello, I'm {full_name}! <span text="size-0.8em">(you can just call me {name})</span
	></MainLayout
>
