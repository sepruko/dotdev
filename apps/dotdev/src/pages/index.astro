---
import MainLayout from "@/layouts/MainLayout";

const {
	entity,
	entity: { name, full_name },
} = DotDev;

const description = `${full_name}'s personal website.'`;

const pronouns = [
	entity.pronouns.reference,
	entity.pronouns.object,
	entity.pronouns.object_self,
	entity.pronouns.possessive,
	entity.pronouns.associative,
];
---

<MainLayout
	description={description}
	keywords={[
		...full_name.toLowerCase().split(" "),
		"webdev",
		"webdevelopment",
		"web development",
		Astro.site!.hostname,
	]}
	og={{ title: Astro.site!.hostname, description }}
>
	<section
		id="hero"
		flex="~ col gap-4 grow-1 items-start justify-center nowrap"
		p="x-[clamp(1rem,3rem,5.5vw)] y-12"
		size="full"
		text="align-left"
	>
		<h1 m="0" text="size-[clamp(1.5rem,4rem,7.5vw)]"
			>Welcome,<br />I'm {full_name}<span animate="caret" c="rosequartz dark:paledogwood"
				>_</span
			></h1
		>
		<p m="0" op="65"
			>Psst... you can just call me {name}.<br /><span op="65" text="size-0.8em"
				>({pronouns.join("/")})</span
			></p
		>
	</section>
</MainLayout>
