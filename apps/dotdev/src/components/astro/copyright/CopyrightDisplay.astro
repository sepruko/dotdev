---
/**
 * Properties to pass to the {@linkcode CopyrightDisplay} component.
 */
interface Props extends DotDevCopyright {}

export type { Props as CopyrightDisplayProps };

const { name, link } = Astro.props;

const url = link ? new URL(/^https?:\/\//.test(link) ? link : `${Astro.url.origin}${link}`) : null;
const ext = url?.origin != Astro.url.origin;
---

{
	url ? (
		<a
			c="unset visited:unset"
			decoration="dashed"
			href={link}
			target={ext ? undefined : "_blank"}
			rel={ext ? undefined : "noreferrer"}
		>
			{name}
		</a>
	) : (
		name
	)
}
