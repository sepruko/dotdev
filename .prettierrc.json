{
	"$schema": "https://json.schemastore.org/prettierrc",
	"experimentalTernaries": false,
	"htmlWhitespaceSensitivity": "strict",
	"plugins": [
		"prettier-plugin-astro"
	],
	"printWidth": 100,
	"proseWrap": "always",
	"tabWidth": 4,
	"useTabs": true,
	"overrides": [
		{
			"files": [
				"**.astro"
			],
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": [
				"**.md",
				"**.mdx",
				"**.yaml",
				"**.yml"
			],
			"options": {
				"printWidth": 80,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
